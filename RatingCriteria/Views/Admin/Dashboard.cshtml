@{
    ViewBag.Title = "Dashboard";
}

<style>
    .book {
        padding: 15px 25px;
        font-size: 24px;
        text-align: center;
        cursor: pointer;
        outline: none;
        color: white;
        background-color: maroon;
        border: none;
        border-radius: 15px;
        box-shadow: 0 9px #999;
    }

    .button:hover {
        background-color: #3e8e41
    }

    .button:active {
        background-color: #3e8e41;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }



    ul.topnav {
        align: center;
        margin-top: 50px;
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: maroon;
    }


        ul.topnav li {
            float: left;
        }


            ul.topnav li a {
                display: inline-block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                transition: 0.3s;
                font-size: 17px;
            }

                ul.topnav li a:hover {
                    background-color: #111;
                }


            ul.topnav li.icon {
                display: none;
            }



    header {
        background-color: black;
        color: white;
        text-align: center;
        padding: 5px;
        margin-top: 50px
    }

    aside {
        line-height: 30px;
        background-color: #eeeeee;
        height: 300px;
        width: 100px;
        float: left;
        padding: 5px;
    }

    section {
        width: 350px;
        float: left;
        padding: 10px;
    }

    footer {
        background-color: black;
        color: white;
        clear: both;
        text-align: center;
        padding: 5px;
    }

    .search {
        color: #f2f2f2;
        height: 10px;
        width: 100px;
        padding: 14px 16px;
        text-decoration: none;
        transition: 0.3s;
        font-size: 17px;
    }

    .sidebar {
        width: 250px;
        background-color: blanchedalmond;
    }
</style>



<h1></h1>
<header>
    <h1>Admin Dashboard</h1>
</header>

